<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.info.manage.dao.RoleMenuDao">

  <resultMap id="BaseResultMap" type="com.info.manage.entity.RoleMenu">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="role_id" jdbcType="BIGINT" property="roleId" />
    <result column="menu_id" jdbcType="BIGINT" property="menuId" />
  </resultMap>

  <sql id="Base_Column_List">
    id, role_id, menu_id
  </sql>

  <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_info_role_menu
    where id = #{id,jdbcType=BIGINT}
  </select>

  <select id="selectRoleMenuByRoleId" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_info_role_menu
    where role_id = #{roleId,jdbcType=BIGINT}
  </select>

  <select id="findRoleMenuListByRoleIds" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" /> from t_info_role_menu where role_id in
    <foreach collection="userRoleList" index="index" item="userRoleList" open="(" separator="," close=")">
      #{userRoleList.roleId}
    </foreach>
  </select>

  <delete id="deleteRoleMenuByRoleId" parameterType="java.lang.Long">
    delete from t_info_role_menu
    where role_id = #{roleId,jdbcType=BIGINT}
  </delete>


  <insert id="saveRoleMenu" >
    insert into t_info_role_menu ( role_id, menu_id) values
    <foreach collection="menuIds" item="menuId" index = "index"  separator=",">
      (#{roleId}, #{menuId})
    </foreach>
  </insert>


  <update id="update" parameterType="com.info.manage.entity.RoleMenu">
    update t_info_role_menu
    set role_id = #{roleId,jdbcType=BIGINT},
      menu_id = #{menuId,jdbcType=BIGINT}
    where id = #{id,jdbcType=BIGINT}
  </update>

</mapper>